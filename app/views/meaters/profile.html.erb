<% if current_meater.user_category == "meeter" %>
  <div class="main-profile-wrapper">
      <div class="profile-image">
        <%= cl_image_tag @meater.photo, transformation: { gravity: :face } %>
      </div>
      <div class="main-profile-content">
        <div class="meat-display-name">
          <h2><%= @meater.first_name %> <%= @meater.last_name %></span></h2>
        </div>
        <div class="gender_location_age">
          <span><%= @meater.email %></span>
          <p class="display"><i class="fa fa-money" aria-hidden="true"></i>  <%= @meater.price %>RMB per hour</p>
        </div>
        <div class="self-summary">
          <h4 class="display">My Self-Summary</h4>
          <p><%= @meater.summary %></p>
        </div>
        <div class="button">
          <%= link_to "Edit My Profile", profile_edit_path, class: 'profile_book_button'%>
        </div>
      </div>
  </div>

<% else %>

  <div class="profile-wrapper">
    <div class="main-profile-wrapper">
      <div class="profile-image">
        <%= cl_image_tag @meater.photo, transformation: { gravity: :face } %>
      </div>
      <div class="main-profile-content">
        <div class="meat-display-name">
          <h2>Hello, I'm <span class="display"><%= @meater.display_name %>!</span></h2>
        </div>
        <div class="gender_location_age">
          <span>I am a <%= @meater.age %> year old <%= @meater.gender %> in <%= @meater.location %>.</span>
          <p class="display"><i class="fa fa-money" aria-hidden="true"></i>  <%= @meater.price %>RMB per hour</p>
        </div>
        <div class="self-summary">
          <h4 class="display">My Self-Summary</h4>
          <p><%= @meater.summary %></p>
        </div>
        <div class="button">
          <%= link_to "Arrange my Meat", profile_meat_edit_path, class: "btn btn-danger" %>
          <%= button_to "remove my meat", :action => "removemeat", :controller => "meats", :method => :post %>
        </div>
      </div>
    </div>
  </div>
  <div class="white_wrapper">
    <div class="profile-continued">
    <div class="profile-stats">
      <h4 class="display">My Stats</h4>
      <table>
        <tr>
          <td class="icon"><i class="fa fa-arrows-v" aria-hidden="true"></i> </td>
          <td class="stat"> <%= @meater.height %> cm tall</td>
        </tr>
        <tr>
          <td class="icon"><i class="fa fa-child" aria-hidden="true"></i></td>
          <td class="stat"><%= @meater.weight %> kilos light</td>
        </tr>
        <tr>
          <td class="icon"><i class="fa fa-suitcase" aria-hidden="true"></i></td>
          <td class="stat" ><%= @meater.occupation %></td>
        </tr>
        <tr>
          <td class="icon"><i class="fa fa-university" aria-hidden="true"></td>
          <td class="stat"><%= @meater.nationality %></td>
        </tr>
        <tr>
          <td class="icon"><i class="fa fa-flag" aria-hidden="true"></i></td>
          <td class="stat"><%= @meater.education %></td>
        </tr>
        <tr>
          <td class="icon"><i class="fa fa-heart" aria-hidden="true"></i></td>
          <td class="stat">I like <%= @meater.hobbies %></td>
        </tr>
      </table>
    </div>
    <div class="my-story">
      <h4 class="display">My Meaty, Meaty Story</h4>
      <p><%= @meater.description %></p>
    </div>
  </div>

  </div>
<% end %>

